<Window x:Class="TodoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Todo List
        App"
        Width="
        1200"
        Height="
        1000"
        WindowStartupLocation="
        CenterScreen">
    <Grid Margin="
        20">
        <!-- Define columns and rows -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <!-- Search Section - Row 0 -->
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    Grid.Row="0"
                    Margin="0,10,0,0">
            <TextBlock Text="Search By"
                       Margin="0,0,10,0"
                       VerticalAlignment="Center"
                       FontSize="14" />
            <ComboBox Width="100"
                      Margin="0,0,20,0">
                <ComboBoxItem Content="All" />
                <ComboBoxItem Content="Priority" />
                <ComboBoxItem Content="Task Name" />
            </ComboBox>
            <TextBox Width="200"
                     materialDesign:HintAssist.Hint="Enter search keyword"
                     Margin="0,0,20,0" />
        </StackPanel>

        <!-- Add Task Section - Row 2 -->
        <GroupBox Header="Add Task"
                  Margin="0,10,0,0"
                  Grid.Row="1"
                  VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                <TextBlock Text="Priority"
                           Margin="0,0,10,0"
                           VerticalAlignment="Center" />
                <ComboBox Width="100"
                          Margin="0,0,20,0">
                    <ComboBoxItem Content="Priority 1" />
                    <ComboBoxItem Content="Priority 2" />
                    <ComboBoxItem Content="Priority 3" />
                    <ComboBoxItem Content="Priority 4" />
                </ComboBox>

                <TextBox Width="200"
                         materialDesign:HintAssist.Hint="Enter task name"
                         Margin="0,0,20,0" />

                <!-- Date Picker for Task Date -->
                <DatePicker Width="150"
                            Margin="0,0,20,0" />

                <!-- Add Button -->
                <Button IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="MaterialDesignFloatingActionMiniLightButton">
                    <materialDesign:PackIcon Kind="Add" />
                </Button>
            </StackPanel>
        </GroupBox>

        <!-- Task List Section - Row 1 -->
        <GroupBox Header="Tasks"
                  Margin="0,10,0,0"
                  Grid.Row="2"
                  VerticalAlignment="Top">
            <Grid>
                <StackPanel Orientation="Horizontal"
                            Margin="0,10,0,0">
                    <TextBlock Text="Sorted By"
                               Margin="0,0,10,0"
                               VerticalAlignment="Center" />
                    <ComboBox Width="100"
                              Margin="0,0,20,0">
                        <ComboBoxItem Content="Id" />
                        <ComboBoxItem Content="Priority" />
                        <ComboBoxItem Content="Date" />
                    </ComboBox>
                    <CheckBox Content="Descending" />
                </StackPanel>

                <!-- DataGrid for Task List -->
                <DataGrid Name="TaskDataGrid"
                          Margin="0,0,0,0"
                          AutoGenerateColumns="False"
                          Height="200">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id"
                                            Binding="{Binding Id}" />
                        <DataGridTextColumn Header="Task"
                                            Binding="{Binding Task}" />
                        <DataGridTextColumn Header="Priority"
                                            Binding="{Binding Priority}" />
                        <DataGridTextColumn Header="Date"
                                            Binding="{Binding Date}" />
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination Section -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,10,0,0">
                    <Button Content="First"
                            Width="80"
                            Style="{DynamicResource MaterialDesignRaisedButton}" />
                    <Button Content="Previous"
                            Width="80"
                            Style="{DynamicResource MaterialDesignRaisedButton}" />
                    <Button Content="Next"
                            Width="80"
                            Style="{DynamicResource MaterialDesignRaisedButton}" />
                    <Button Content="Last"
                            Width="80"
                            Style="{DynamicResource MaterialDesignRaisedButton}" />
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
