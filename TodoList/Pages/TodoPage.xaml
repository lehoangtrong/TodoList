<Page x:Class="TodoList.Pages.TodoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:TodoList.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="TodoPage"
      Background="White"
      Loaded="Page_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <TextBlock x:Name="TodoTextBlock"
                   Grid.Row="0"
                   Text="Today's Tasks"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="10"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" />

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <!-- Add ScrollViewer -->
            <ItemsControl x:Name="TasksListItem"
                          Margin="10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="5"
                                             Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Nội dung chi tiết của Task -->
                                <StackPanel Grid.Column="0"
                                            Margin="0,0,10,0">
                                    <!-- Tiêu đề -->
                                    <TextBlock Text="{Binding Title}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               TextWrapping="Wrap" />

                                    <!-- Mô tả -->
                                    <TextBlock Text="{Binding Description}"
                                               FontSize="14"
                                               Foreground="Gray"
                                               TextWrapping="Wrap"
                                               Margin="0,5,0,0" />

                                    <!-- Thời gian đến hạn (Due Date) -->
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,5,0,0">
                                        <materialDesign:PackIcon Kind="ClockOutline"
                                                                 Margin="0,0,5,0" />
                                        <TextBlock Text="{Binding DueDate, StringFormat='{}{0:dd/MM/yyyy h:mm tt}'}"
                                                   FontSize="12"
                                                   Foreground="Gray" />
                                    </StackPanel>

                                    <!-- Ngày tạo (Created Date) -->
                                    <TextBlock Text="{Binding CreatedDate, StringFormat='Created: {0:dd/MM/yyyy}'}"
                                               FontSize="12"
                                               Foreground="Gray"
                                               Margin="0,5,0,0" />

                                    <!-- Độ ưu tiên (Priority) -->
                                    <TextBlock Text="{Binding Priority, StringFormat='Priority: {0}'}"
                                               FontSize="12"
                                               Foreground="Gray"
                                               Margin="0,5,0,0" />

                                    <!-- Trạng thái (Status) -->
                                    <TextBlock Text="{Binding Status}"
                                               FontSize="12"
                                               Foreground="Gray"
                                               Margin="0,5,0,0" />
                                </StackPanel>

                                <!-- Trạng thái (Status) -->
                                <CheckBox Grid.Column="1"
                                          Style="{StaticResource MaterialDesignActionCheckBox}"
                                          VerticalAlignment="Center"
                                          Margin="10,0,0,0"
                                          ToolTip="Mark as completed" />
                            </Grid>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
